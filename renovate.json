{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "every weekend"
  ],
  "reviewers": [
    "skjnldsv"
  ],
  "labels": [
    "dependencies",
    "3. to review"
  ],
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "ignoreUnstable": false,
  "baseBranchPatterns": [
    "master",
    "stable32",
    "stable31",
    "stable30"
  ],
  "enabledManagers": [
    "npm"
  ],
  "ignoreDeps": [
    "node",
    "npm"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "cypress",
      "matchPackageNames": [
        "/^@cypress//",
        "/cypress/",
        "/eslint-plugin-cypress/"
      ]
    },
    {
      "groupName": "nextcloud",
      "matchPackageNames": [
        "/^@nextcloud//"
      ]
    },
    {
      "groupName": "dockerode",
      "matchPackageNames": [
        "@types/dockerode",
        "dockerode"
      ]
    },
    {
      "groupName": "typescript",
      "matchPackageNames": [
        "tslib",
        "typescript"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "matchBaseBranches": [
        "stable32",
        "stable31",
        "stable30"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "vue"
      ],
      "allowedVersions": "<3"
    }
  ]
}
